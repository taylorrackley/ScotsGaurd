<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".StudentDashboardActivity">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:grid="http://schemas.android.com/apk/res-auto"

        android:id="@+id/menu_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_include"
        android:padding="20dp"

        android:scaleType="centerCrop"
        grid:columnCount="2"
        grid:rowOrderPreserved="false">

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/menuBtnShuttle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="Shuttle"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/menuBtnReport"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="Report"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/menuBtnMessageSecurity"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="Message Security"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/menuBtnProcedures"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="Procedures"
            grid:layout_columnWeight="1"
            grid:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>